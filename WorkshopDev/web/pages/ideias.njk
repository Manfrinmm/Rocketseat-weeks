{% extends "layout.njk" %}

{% set bodyId = "page-ideas" %}

{% block title %}
  <title>Ideias - Casa Criativa</title>
{% endblock %}

{% block content %}

  <header>
    <a href="/">
      <img src="logo.png" alt="Casa Criativa ideias para a crise"/>
    </a>
    <nav>
      <li>
        <a href="/">Início</a>
      </li>
      <li>
        <a href="#" onclick="onOff()" class="button">Nova Ideia</a>
      </li>
    </nav>
  </header>

  <section id="title">
    <p>em exibição</p>
    <h1>Ideias</h1>
  </section>
  <main>
    <section id="ideas">
      {% for idea in ideas %}
        {% include "itemIdea.njk" %}
      {% endfor %}
    </section>
  </main>

{% endblock %}
